<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_top_message_item"

    android:gravity="start"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_text"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_start_message_item"
        android:layout_marginStart="@dimen/margin_end_message_item"
        android:background="@drawable/bg_other_message"

        android:padding="@dimen/padding_message_item"
        android:text="Hello my name is nefor"
        android:textColor="@color/message_text_color" />

</LinearLayout>